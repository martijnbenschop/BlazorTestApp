@page "/pecunia"

<PageTitle>Pecunia</PageTitle>

<h1>Pecunia</h1>

<p>Tekst: @bla</p>

<SfButton CssClass="e-outline" IsPrimary="true" @onclick="BlaBla" Content="Talk to me"></SfButton>

<h2>Foto's van Pecunia</h2>
<div>@if (imageSource is not null)
    {
        <p>
            <img src="@imageSource" / width="500">
        </p>
    }
    @for (var i = 1; i <= 3; i++)
    {
        var imageId = i;
        <SfButton Cssclass="e-outline" IsPrimary="true" style="margin: 3px;" @onclick="() => ShowImage(imageId)">
            Foto @imageId
        </SfButton>
    }
</div>



@code {
    private string bla = "Bla";

    private void BlaBla()
    {
        bla = bla + " bla";
    }

    private string? imageSource;

    private void ShowImage(int id)
    {
        imageSource = $"pictures/image{id}.jpeg";
    }
}
